
sanakirja = {'kysymys':{'vastaa kysymykseen'},'vastaus':{'vastaus kysymykseen'},'vinkki':'huomaa virhe'}

vastaus = input(sanakirja['kysymys'])
if vastaus in sanakirja['vastaus']:
    print('Oikein')
else:
    print(sanakirja['vinkki'])

with open("vastaukset.txt", "a") as file:
            for item in vastaus:
                file.writelines(item)
